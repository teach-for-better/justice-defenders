{
  "name": "justice-defenders",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@react-pdf/renderer": "^1.6.10",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "eslint-plugin-cypress": "^2.11.1",
    "firebase": "^7.17.1",
    "firebase-tools": "^8.6.0",
    "react": "^16.13.1",
    "react-audio-player": "^0.13.0",
    "react-dom": "^16.13.1",
    "react-pdf": "^4.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.1",
    "styled-components": "^5.1.1"
  },
  "main": "src/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts -r @cypress/instrument-cra start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:report": "react-scripts test --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "dev": "nf start -p 3000",
    "cy:open": "cypress open",
    "cy:report": "cypress run --headless",
    "cy:ci": "cypress run --headless"
  },
  "eslintConfig": {
    "extends": [
      "plugin:cypress/recommended",
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.8.1",
    "@cypress/instrument-cra": "^1.3.1",
    "codecov": "^3.7.2",
    "cypress": "^4.12.1",
    "electron": "^9.1.2",
    "foreman": "^3.0.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "start-server-and-test": "^1.11.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/*.js": [
      "pretty-quick --staged",
      "eslint"
    ]
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "<rootDir>cypress"
    ]
  },
  "nyc": {
    "report-dir": "cypress-coverage",
    "excludeAfterRemap": true
  }
}
