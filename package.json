{
  "name": "justice-defenders",
  "description": "Platform to provide access to legal training for prison inmates in Kenya and Uganda",
  "author": "Campbell Docherty (https://github.com/CampbellDochert) and Giovanna Aveiro (https://github.com/glrta)",
  "productName": "Justice Defenders",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "dependencies": {
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@react-pdf/renderer": "^1.6.10",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "cross-env": "^7.0.2",
    "electron-is-dev": "^1.2.0",
    "eslint-plugin-cypress": "^2.11.1",
    "firebase": "^7.17.1",
    "firebase-tools": "^8.6.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.0",
    "react-svg": "^11.0.36",
    "styled-components": "^5.1.1",
    "is-electron": "^2.2.0"
  },
  "main": "public/electron.js",
  "scripts": {
    "start": "react-scripts -r @cypress/instrument-cra start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:report": "react-scripts test --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "dev": "concurrently \"npm run start\" \"wait-on http://localhost:3000 && electron .\"",
    "cy:open": "cypress open",
    "cy:report": "cypress run --headless",
    "cy:ci": "cypress install && start-server-and-test 3000 cy:report && codecov",
    "electron-start": "concurrently \"cross-env BROWSER=none npm run start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-package": "npm run build && electron-builder build --mac --win"
  },
  "build": {
    "appId": "justice.defenders",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "build/icon.*",
      "build/preload.js"
    ],
    "mac": {
      "icon": "build/icon.icns"
    },
    "win": {
      "icon": "build/icon.ico"
    }
  },
  "eslintConfig": {
    "extends": [
      "plugin:cypress/recommended",
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.8.1",
    "@cypress/instrument-cra": "^1.3.1",
    "codecov": "^3.7.2",
    "concurrently": "^5.3.0",
    "cypress": "^4.12.1",
    "electron": "^9.1.2",
    "electron-builder": "^22.8.0",
    "foreman": "^3.0.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "start-server-and-test": "^1.11.3",
    "wait-on": "^5.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/*.js": [
      "pretty-quick --staged",
      "eslint"
    ]
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "<rootDir>cypress"
    ]
  },
  "nyc": {
    "report-dir": "cypress-coverage",
    "excludeAfterRemap": true
  }
}
